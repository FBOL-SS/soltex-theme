<div class="cart-container">
    <h1 class="cart-title">TU CARRITO</h1>
  
    {% if cart.item_count > 0 %}
      <table class="cart-table">
        <thead>
          <tr>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Precio</th>
          </tr>
        </thead>
        <tbody>
          {% for item in cart.items %}
            <tr>
              <td>{{ item.product.title }}</td>
              <td>
                <input type="number" name="updates[]" value="{{ item.quantity }}" min="1">
                <input type="hidden" name="updates[]" value="{{ item.key }}">
              </td>
              <td>{{ item.line_price | money }}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
  
      <div class="cart-summary">
        <p><strong>Total:</strong> {{ cart.total_price | money }}</p>
        <form action="/cart" method="post">
          <button type="submit" name="update" class="btn-secondary">Actualizar carrito</button>
          <a href="/checkout" class="btn-primary">Proceder al pago</a>
        </form>
      </div>
    
    {% else %}
      <p class="empty-cart">Tu carrito está vacío.</p>
    {% endif %}
  </div>
  
  <style>
  .cart-container {
    max-width: 900px;
    margin: 40px auto;
    padding: 0 20px;
  }
  
  .cart-title {
    font-size: 32px;
    font-weight: bold;
    margin-bottom: 20px;
  }
  
  .cart-table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 30px;
  }
  
  .cart-table th,
  .cart-table td {
    padding: 12px 16px;
    text-align: left;
    border-bottom: 1px solid #ddd;
  }
  
  .cart-table input[type="number"] {
    width: 60px;
    padding: 5px;
    border-radius: 4px;
    border: 1px solid #ccc;
  }
  
  .cart-summary {
    text-align: right;
  }
  
  .cart-summary p {
    font-size: 18px;
    margin-bottom: 10px;
  }
  
  .btn-primary {
    background-color: #0056b3;
    color: #fff;
    padding: 12px 20px;
    text-decoration: none;
    border-radius: 6px;
    font-weight: bold;
    margin-left: 10px;
  }
  
  .btn-primary:hover {
    background-color: #003e82;
  }
  
  .btn-secondary {
    background-color: #f0f0f0;
    color: #333;
    padding: 12px 20px;
    border: 1px solid #ccc;
    border-radius: 6px;
    font-weight: bold;
  }
  
  .btn-secondary:hover {
    background-color: #ddd;
  }
  
  .empty-cart {
    font-size: 18px;
    color: #777;
  }
  </style>
  