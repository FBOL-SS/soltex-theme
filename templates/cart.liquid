<div class="cart-container">
    <h1 class="cart-title">TU CARRITO</h1>
  
    {% if cart.items.size == 0 %}
      <p>Tu carrito está vacío.</p>
    {% else %}
      <table class="cart-table">
        <thead>
          <tr>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Precio</th>
          </tr>
        </thead>
        <tbody>
          {% for item in cart.items %}
            <tr>
              <td class="product-info">
                <img src="{{ item.image | image_url: width: 80 }}" alt="{{ item.product.title }}">
                <div>
                  <div>{{ item.product.title }}</div>
                  <a href="{{ item.url }}" class="ver-producto-link" target="_blank">Ver producto</a>
                </div>
              </td>
              <td>
                <input type="number" name="updates[]" value="{{ item.quantity }}" min="1">
              </td>
              <td>{{ item.line_price | money }}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
  
      <div class="cart-total">
        <strong>Total:</strong> {{ cart.total_price | money }}
      </div>
  
      <form action="/cart" method="post">
        <button type="submit" name="update" class="btn-actualizar">Actualizar carrito</button>
        <a href="/checkout" class="btn-pago">Proceder al pago</a>
      </form>
    {% endif %}
  </div>
  
  <style>
  .cart-container {
    max-width: 900px;
    margin: 40px auto;
    padding: 0 20px;
  }
  
  .cart-title {
    font-size: 32px;
    margin-bottom: 20px;
    font-weight: bold;
  }
  
  .cart-table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 30px;
  }
  
  .cart-table th,
  .cart-table td {
    padding: 12px 10px;
    text-align: left;
    border-bottom: 1px solid #ccc;
  }
  
  .product-info {
    display: flex;
    align-items: center;
    gap: 15px;
  }
  
  .product-info img {
    width: 60px;
    border-radius: 4px;
  }
  
  .ver-producto-link {
    font-size: 14px;
    color: #0071e3;
    text-decoration: none;
    display: inline-block;
    margin-top: 4px;
  }
  
  .ver-producto-link:hover {
    text-decoration: underline;
  }
  
  input[type="number"] {
    width: 60px;
    padding: 6px;
    border: 1px solid #ccc;
    border-radius: 4px;
  }
  
  .cart-total {
    font-size: 20px;
    font-weight: bold;
    text-align: right;
    margin-bottom: 20px;
  }
  
  .btn-actualizar,
  .btn-pago {
    padding: 10px 20px;
    font-size: 16px;
    border: none;
    text-decoration: none;
    display: inline-block;
    margin-right: 10px;
    border-radius: 6px;
  }
  
  .btn-actualizar {
    background-color: #e0e0e0;
    color: #333;
    cursor: pointer;
  }
  
  .btn-actualizar:hover {
    background-color: #ccc;
  }
  
  .btn-pago {
    background-color: #0056b3;
    color: white;
  }
  
  .btn-pago:hover {
    background-color: #003e82;
  }
  </style>
      