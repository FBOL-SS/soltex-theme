<div class="cart-page-container">
    <h1 class="cart-title">Tu carrito</h1>
  
    {% if cart.item_count > 0 %}
      <form action="/cart" method="post">
        <table class="cart-table">
          <thead>
            <tr>
              <th>Producto</th>
              <th>Cantidad</th>
              <th>Precio</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            {% for item in cart.items %}
              <tr class="cart-item">
                <td class="product-info">
                  <img src="{{ item.image | image_url: width: 80 }}" alt="{{ item.product.title }}">
                  <span>{{ item.product.title }}</span>
                </td>
                <td>
                  <input type="number" name="updates[]" value="{{ item.quantity }}" min="1" class="quantity-input">
                </td>
                <td>{{ item.line_price | money }}</td>
                <td>
                  <a href="{{ item.url_to_remove }}" class="remove-link">Eliminar</a>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
  
        <div class="cart-summary">
          <p class="cart-total">Total: <strong>{{ cart.total_price | money }}</strong></p>
          <div class="cart-actions">
            <button type="submit" name="update" class="btn-update">Actualizar carrito</button>
            <a href="/checkout" class="btn-checkout">Proceder al pago</a>
          </div>
        </div>
      </form>
    {% else %}
      <p class="empty-cart">Tu carrito está vacío.</p>
      <a href="/pages/tienda" class="btn-volver">← Volver al catálogo</a>
    {% endif %}
  </div>
  
  <style>
  .cart-page-container {
    max-width: 1000px;
    margin: 40px auto;
    padding: 0 20px;
  }
  
  .cart-title {
    font-size: 32px;
    margin-bottom: 30px;
    font-weight: 700;
  }
  
  .cart-table {
    width: 100%;
    border-collapse: collapse;
  }
  
  .cart-table th, .cart-table td {
    padding: 15px;
    text-align: left;
    border-bottom: 1px solid #eaeaea;
  }
  
  .cart-item img {
    width: 60px;
    margin-right: 15px;
    vertical-align: middle;
    border-radius: 6px;
  }
  
  .product-info {
    display: flex;
    align-items: center;
    gap: 15px;
  }
  
  .quantity-input {
    width: 60px;
    padding: 5px;
    font-size: 16px;
  }
  
  .remove-link {
    color: #d00;
    text-decoration: none;
    font-size: 14px;
  }
  
  .remove-link:hover {
    text-decoration: underline;
  }
  
  .cart-summary {
    margin-top: 30px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
  }
  
  .cart-total {
    font-size: 20px;
  }
  
  .cart-actions {
    display: flex;
    gap: 15px;
    margin-top: 15px;
  }
  
  .btn-update,
  .btn-checkout,
  .btn-volver {
    background-color: #003366;
    color: #fff;
    padding: 12px 20px;
    text-decoration: none;
    border: none;
    border-radius: 6px;
    font-size: 16px;
    cursor: pointer;
  }
  
  .btn-update:hover,
  .btn-checkout:hover,
  .btn-volver:hover {
    background-color: #002244;
  }
  
  .empty-cart {
    font-size: 18px;
    margin-bottom: 20px;
  }
  </style>
    