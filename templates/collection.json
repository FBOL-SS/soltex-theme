/* Archivo limpio: templates/collection.json */
{
  "sections": {
    "main-collection-banner": {
      "type": "main-collection-banner"
    },
    "product-grid": {
      "type": "product-grid"
    }
  },
  "order": [
    "main-collection-banner",
    "product-grid"
  ]
}


/* Archivo limpio: sections/main-collection-banner.liquid */
<section class="collection-banner">
  <h1>{{ collection.title }}</h1>
</section>


/* Archivo limpio: sections/product-grid.liquid */
<section class="collection-page">
  <div class="collection-container">

    <aside class="collection-sidebar">
      <h2 class="sidebar-title">Filtros</h2>

      <div class="sidebar-filter">
        <h3>Marca</h3>
        <!-- Aquí pondremos filtros de marca dinámicos después -->
      </div>

      <div class="sidebar-filter">
        <h3>Categoría</h3>
        <!-- Aquí pondremos filtros de categoría dinámicos después -->
      </div>

      <div class="sidebar-filter">
        <h3>Tipo</h3>
        <label><input type="checkbox"> Original</label>
        <label><input type="checkbox"> Genérico</label>
        <label><input type="checkbox"> Strong H</label>
      </div>

    </aside>

    <div class="collection-products">
      {% paginate collection.products by 20 %}
        <div class="product-grid">
          {% for product in collection.products %}
            <div class="product-card">
              <a href="{{ product.url }}">
                <img src="{{ product.featured_image | image_url: width: 400 }}" alt="{{ product.title }}">
                <h3>{{ product.title }}</h3>
                <p>{{ product.price | money }}</p>
              </a>
            </div>
          {% endfor %}
        </div>
      {% endpaginate %}
    </div>

  </div>
</section>


/* Archivo limpio: assets/collection.css */
.collection-banner {
  text-align: center;
  padding: 40px 0;
  background-color: #f5f5f5;
  margin-bottom: 40px;
}

.collection-banner h1 {
  font-size: 36px;
  text-transform: uppercase;
  color: #0056b3;
}

.collection-page {
  max-width: 1400px;
  margin: 0 auto;
  padding: 20px;
}

.collection-container {
  display: flex;
  gap: 40px;
}

.collection-sidebar {
  width: 250px;
  background: #fafafa;
  padding: 20px;
  border-radius: 10px;
}

.sidebar-title {
  font-size: 24px;
  margin-bottom: 20px;
}

.sidebar-filter h3 {
  margin-top: 20px;
  margin-bottom: 10px;
}

.sidebar-filter label {
  display: block;
  margin-bottom: 8px;
}

.collection-products {
  flex: 1;
}

.product-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
  gap: 20px;
}

.product-card {
  background: white;
  padding: 10px;
  text-align: center;
  border-radius: 8px;
  box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s;
}

.product-card:hover {
  transform: translateY(-5px);
}

.product-card img {
  width: 100%;
  height: auto;
  border-radius: 6px;
}

.product-card h3 {
  font-size: 16px;
  margin: 10px 0 5px;
}

.product-card p {
  color: #0056b3;
  font-weight: bold;
}

@media (max-width: 900px) {
  .collection-container {
    flex-direction: column;
  }

  .collection-sidebar {
    width: 100%;
    margin-bottom: 20px;
  }
}
