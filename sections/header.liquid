<header class="site-header">
    <div class="header-container">
      <div class="header-logo">
        {% if section.settings.logo %}
          <a href="{{ routes.root_url }}">
            <img src="{{ section.settings.logo | img_url: 'medium' }}" alt="{{ shop.name }}">
          </a>
        {% else %}
          <a href="{{ routes.root_url }}">
            {{ shop.name }}
          </a>
        {% endif %}
      </div>
  
      <nav class="header-navigation">
        <ul class="menu">
          {% for link in linklists[section.settings.menu].links %}
            <li>
              <a href="{{ link.url }}">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </nav>
  
      <button class="menu-toggle" aria-label="Abrir menú" onclick="document.querySelector('.menu').classList.toggle('open')">
        ☰
      </button>
    </div>
  </header>
  
  <style>
  .site-header {
    background-color: #001F3F;
    padding: 20px 30px;
    color: white;
  }
  
  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .header-logo img {
    max-height: 50px;
  }
  
  .header-navigation .menu {
    list-style: none;
    display: flex;
    gap: 20px;
    margin: 0;
    padding: 0;
  }
  
  .header-navigation .menu li a {
    color: white;
    text-decoration: none;
    font-weight: bold;
    text-transform: uppercase;
    transition: color 0.3s;
  }
  
  .header-navigation .menu li a:hover {
    color: #FFDD00;
  }
  
  .menu-toggle {
    background: none;
    border: none;
    color: white;
    font-size: 28px;
    cursor: pointer;
    display: none;
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .header-navigation .menu {
      display: none;
      flex-direction: column;
      background-color: #001F3F;
      position: absolute;
      top: 80px;
      right: 30px;
      padding: 20px;
      border-radius: 8px;
    }
  
    .header-navigation .menu.open {
      display: flex;
    }
  
    .menu-toggle {
      display: block;
    }
  }
  </style>
  
  {% schema %}
  {
    "name": "Header",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo"
      },
      {
        "type": "link_list",
        "id": "menu",
        "label": "Menú de navegación",
        "default": "main-menu"
      }
    ],
    "presets": [
      {
        "name": "Encabezado"
      }
    ]
  }
  {% endschema %}
  