<div class="product-container">
  <div class="product-media">
    {% if product.images.size > 1 %}
      <div class="product-main-img">
        <img src="{{ product.featured_image | image_url: width: 600 }}" alt="{{ product.title }}">
      </div>
      <div class="product-thumbnails">
        {% for image in product.images %}
          <img src="{{ image | image_url: width: 100 }}" alt="{{ product.title }}" class="thumb-img" onclick="document.querySelector('.product-main-img img').src = this.src;">
        {% endfor %}
      </div>
    {% else %}
      <img src="{{ product.featured_image | image_url: width: 600 }}" alt="{{ product.title }}" class="product-single-img">
    {% endif %}
  </div>

  <div class="product-details">
    <h1 class="product-title">{{ product.title }}</h1>
    <p class="product-price">{{ product.price | money }}</p>

    <form method="post" action="/cart/add">
      <input type="hidden" name="id" value="{{ product.variants.first.id }}">
      <button type="submit" class="btn-product">Agregar al carrito</button>
    </form>

    <a href="https://wa.me/5218711234567?text=Hola!%20Estoy%20interesado%20en%20cotizar%20el%20producto:%20{{ product.title | url_escape }}%20(SKU:%20{{ product.sku }})%20al%20mayoreo"
       target="_blank"
       class="btn-cotizar-whatsapp">
       Solicitar cotización personalizada
    </a>

    <p class="product-description">{{ product.description }}</p>

    <div class="product-specs">
      <h3>ESPECIFICACIONES</h3>
      <ul>
        <li><strong>Modelo Compatible:</strong> {{ product.title }}</li>
        <li><strong>SKU:</strong> {{ product.sku }}</li>
        <li><strong>Marca:</strong> {{ product.vendor }}</li>
        <li><strong>Calidad:</strong> 
          {% if product.tags contains 'Original' %}
            Original
          {% elsif product.tags contains 'Strong H' %}
            Strong H
          {% elsif product.tags contains 'Genérico' %}
            Genérico
          {% else %}
            -
          {% endif %}
        </li>
      </ul>
    </div>

    <a href="/pages/tienda" class="btn-volver-catalogo">← Volver al catálogo</a>
  </div>
</div>

<style>
.product-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 40px;
  max-width: 1200px;
  margin: 0 auto;
  padding: 40px 20px;
}

.product-media {
  flex: 1 1 45%;
  text-align: center;
}

.product-main-img img,
.product-single-img {
  width: 100%;
  max-width: 500px;
  border-radius: 8px;
}

.product-thumbnails {
  margin-top: 15px;
  display: flex;
  justify-content: center;
  gap: 10px;
  flex-wrap: wrap;
}

.thumb-img {
  width: 80px;
  height: auto;
  cursor: pointer;
  border: 2px solid transparent;
  border-radius: 4px;
}

.thumb-img:hover {
  border-color: #0056b3;
}

.product-details {
  flex: 1 1 45%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  gap: 15px;
}

.product-title {
  font-size: 30px;
  font-weight: bold;
}

.product-price {
  font-size: 24px;
  color: #0071e3;
}

.btn-product {
  background-color: #0056b3;
  color: white;
  padding: 12px 20px;
  border: none;
  border-radius: 6px;
  font-size: 16px;
  cursor: pointer;
}

.btn-product:hover {
  background-color: #003e82;
}

.btn-cotizar-whatsapp {
  background-color: #25D366;
  color: white;
  padding: 12px 20px;
  border-radius: 6px;
  font-weight: bold;
  text-align: center;
  text-decoration: none;
}

.btn-cotizar-whatsapp:hover {
  background-color: #128C7E;
}

.product-description {
  color: #444;
}

.product-specs {
  background-color: #f4f4f4;
  padding: 20px;
  border-radius: 10px;
}

.product-specs ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

.product-specs li {
  margin-bottom: 10px;
}

.btn-volver-catalogo {
  display: inline-block;
  margin-top: 20px;
  font-weight: bold;
  text-decoration: none;
  color: #0056b3;
}

.btn-volver-catalogo:hover {
  text-decoration: underline;
}
</style>
