<div class="product-container">

  {% if request.referer contains '/search' %}
    <div class="back-to-search">
      <a href="{{ request.referer }}">&larr; Volver a los resultados de b√∫squeda</a>
    </div>
  {% endif %}

  <div class="product-main">
    <div class="product-image">
      <img src="{{ product.featured_image | image_url: width: 600 }}" alt="{{ product.title }}">
    </div>

    <div class="product-info">
      <h1 class="product-title">{{ product.title }}</h1>
      <p class="product-price">{{ product.price | money }}</p>

      <form method="post" action="/cart/add">
        <input type="hidden" name="id" value="{{ product.variants.first.id }}">
        <button type="submit" class="btn-add-to-cart">Agregar al carrito</button>
      </form>

      <p class="product-description">{{ product.description }}</p>

      <div class="product-specs">
        <h3>ESPECIFICACIONES</h3>
        <ul>
          <li><strong>Modelo Compatible:</strong> {{ product.description | strip_html | split: product.vendor | first | strip }}</li>
          <li><strong>SKU:</strong> {{ product.variants.first.sku }}</li>
          <li><strong>Marca:</strong> {{ product.vendor }}</li>
          <li><strong>Calidad:</strong> 
            {% assign calidad = product.tags | join: ', ' %}
            {% if calidad != blank %}
              {{ calidad }}
            {% else %}
              Sin especificar
            {% endif %}
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

<style>
.product-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 60px 20px;
}

.back-to-search {
  margin-bottom: 20px;
}

.back-to-search a {
  display: inline-block;
  font-size: 14px;
  color: #0056b3;
  text-decoration: none;
  font-weight: 500;
}

.back-to-search a:hover {
  text-decoration: underline;
}

.product-main {
  display: flex;
  flex-wrap: wrap;
  gap: 40px;
}

.product-image img {
  width: 100%;
  max-width: 500px;
  border-radius: 10px;
}

.product-info {
  flex: 1;
}

.product-title {
  font-size: 32px;
  font-weight: bold;
  margin-bottom: 10px;
}

.product-price {
  font-size: 24px;
  color: #0071e3;
  margin-bottom: 20px;
}

.btn-add-to-cart {
  background-color: #0056b3;
  color: white;
  padding: 12px 24px;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  margin-bottom: 30px;
}

.btn-add-to-cart:hover {
  background-color: #003d80;
}

.product-specs {
  background: #f9f9f9;
  padding: 20px;
  border-radius: 8px;
}

.product-specs h3 {
  margin-bottom: 15px;
}

.product-specs ul {
  list-style: none;
  padding: 0;
}

.product-specs li {
  margin-bottom: 10px;
  font-size: 16px;
}
</style>
