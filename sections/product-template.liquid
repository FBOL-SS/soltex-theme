<div class="product-wrapper page-width">

  {% if request.referer contains '/search' %}
    <div class="back-to-search">
      <a href="{{ request.referer }}">&larr; Volver a resultados</a>
    </div>
  {% endif %}

  <div class="product-grid">
    <div class="product-img">
      <img src="{{ product.featured_image | image_url: width: 600 }}" alt="{{ product.title }}">
    </div>

    <div class="product-details">
      <h1>{{ product.title }}</h1>
      <p class="price">{{ product.price | money }}</p>

      <form method="post" action="/cart/add">
        <input type="hidden" name="id" value="{{ product.variants.first.id }}">
        <button type="submit" class="btn-cart">Agregar al carrito</button>
      </form>

      {% if product.description != blank %}
        <p class="product-desc">{{ product.description }}</p>
      {% endif %}

      <div class="spec-box">
        <h3>ESPECIFICACIONES</h3>
        <ul>
          <li><strong>Modelo Compatible:</strong> {{ product.title }}</li>
          <li><strong>SKU:</strong> {{ product.variants.first.sku }}</li>
          <li><strong>Marca:</strong> {{ product.vendor }}</li>
          <li><strong>Calidad:</strong>
            {% if product.tags.size > 0 %}
              {{ product.tags[0] }}
            {% else %}
              Gen√©rico
            {% endif %}
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

<style>
.product-wrapper {
  padding: 60px 20px;
  max-width: 1200px;
  margin: 0 auto;
}

.back-to-search {
  margin-bottom: 30px;
}

.back-to-search a {
  color: #0056b3;
  font-size: 14px;
  text-decoration: none;
}

.product-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 40px;
}

.product-img {
  flex: 1 1 40%;
}

.product-img img {
  width: 100%;
  border-radius: 10px;
}

.product-details {
  flex: 1 1 50%;
}

.product-details h1 {
  font-size: 32px;
  font-weight: bold;
  margin-bottom: 10px;
}

.price {
  font-size: 24px;
  color: #0071e3;
  margin-bottom: 20px;
}

.btn-cart {
  background-color: #0056b3;
  color: #fff;
  padding: 12px 24px;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  margin-bottom: 30px;
}

.btn-cart:hover {
  background-color: #004494;
}

.product-desc {
  margin-bottom: 20px;
}

.spec-box {
  background: #f7f7f7;
  padding: 20px;
  border-radius: 10px;
}

.spec-box h3 {
  margin-bottom: 15px;
}

.spec-box ul {
  list-style: none;
  padding: 0;
}

.spec-box li {
  margin-bottom: 10px;
}
</style>
