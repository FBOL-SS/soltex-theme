<div class="volver-al-catalogo">
  <a href="/pages/tienda">&larr; Volver al cat√°logo</a>
</div>

<div class="producto-detalle">
  <h1>{{ product.title }}</h1>

  <p class="precio">{{ product.price | money }}</p>

  <form method="post" action="/cart/add">
    <input type="hidden" name="id" value="{{ product.variants.first.id }}">
    <button type="submit" class="btn-agregar">Agregar al carrito</button>
  </form>

  <div class="descripcion">
    {{ product.description }}
  </div>

  <div class="especificaciones">
    <h2>ESPECIFICACIONES</h2>
    <ul>
      <li><strong>Modelo Compatible:</strong> {{ product.title }}</li>
      <li><strong>SKU:</strong> {{ product.sku }}</li>
      <li><strong>Marca:</strong> {{ product.vendor }}</li>
      <li><strong>Calidad:</strong> 
        {% assign calidad = product.tags | join: ", " | split: ", " | first %}
        {{ calidad }}
      </li>
    </ul>
  </div>
</div>

