<section class="brands-page">
  <div class="brands-page-banner">
    <h1>{{ section.settings.heading }}</h1>
    <p>{{ section.settings.subtext }}</p>
  </div>

  <div class="brands-grid">
    {% for brand in section.blocks %}
      <a href="{{ brand.settings.link | default: '#' }}" class="brand-card">
        <img src="{{ brand.settings.image | image_url: width: 300 }}" alt="{{ brand.settings.name | escape }}">
        <div class="brand-name">{{ brand.settings.name }}</div>
      </a>
    {% endfor %}
  </div>

  {% if section.settings.show_button %}
    <div class="brands-page-button">
      <a href="{{ section.settings.button_link }}" class="view-all-button">{{ section.settings.button_text }}</a>
    </div>
  {% endif %}
</section>

{% schema %}
{
  "name": "Brands Page",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Título principal",
      "default": "Nuestras Marcas"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtexto",
      "default": "Contamos con la distribución oficial de las mejores marcas textiles."
    },
    {
      "type": "checkbox",
      "id": "show_button",
      "label": "Mostrar botón para ver catálogo completo",
      "default": true
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Texto del botón",
      "default": "Ver Todos los Productos"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Link del botón",
      "default": "/collections/all"
    }
  ],
  "blocks": [
    {
      "type": "brand",
      "name": "Marca",
      "settings": [
        {
          "type": "text",
          "id": "name",
          "label": "Nombre de la Marca"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Logo de la Marca"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Enlace a la colección o página"
        }
      ]
    }
  ],
  "max_blocks": 30,
  "presets": [
    {
      "name": "Página de Marcas",
      "category": "Página"
    }
  ]
}
{% endschema %}
