<section class="brands-section">
  <div class="brands-header">
    <h2>NUESTRAS MARCAS</h2>
    <p>Contamos con la distribución oficial de las mejores marcas textiles.</p>
  </div>

  <div class="brands-button-container">
    <a href="/collections/all" class="brands-view-all">Ver Todos los Productos</a>
  </div>

  <div class="brands-container">
    {% for block in section.blocks %}
      <a href="{{ block.settings.brand_link }}" class="brand-card">
        <img src="{{ block.settings.brand_logo | img_url: 'medium' }}" alt="{{ block.settings.brand_name }}">
      </a>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Página de Marcas",
  "settings": [],
  "blocks": [
    {
      "type": "brand",
      "name": "Marca",
      "settings": [
        {
          "type": "image_picker",
          "id": "brand_logo",
          "label": "Logo de la marca"
        },
        {
          "type": "text",
          "id": "brand_name",
          "label": "Nombre de la marca"
        },
        {
          "type": "url",
          "id": "brand_link",
          "label": "Enlace de la marca"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Página de Marcas",
      "category": "Marcas"
    }
  ]
}
{% endschema %}

<style>
  .brands-section {
    padding: 40px 20px;
  }

  .brands-header {
    text-align: center;
    margin-bottom: 30px;
  }

  .brands-button-container {
    text-align: center;
    margin-bottom: 30px;
  }

  .brands-view-all {
    background-color: #002F5F;
    color: white;
    padding: 10px 20px;
    text-decoration: none;
    font-weight: 600;
    border-radius: 6px;
    font-size: 14px;
  }

  .brands-container {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
    justify-items: center;
  }

  .brand-card {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    max-width: 140px;
    height: 90px;
    border-radius: 10px;
    background: #ffffff;
    box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    transition: transform 0.3s ease;
  }

  .brand-card:hover {
    transform: translateY(-4px);
  }

  .brand-card img {
    max-width: 100%;
    max-height: 60px;
    object-fit: contain;
  }

  @media screen and (max-width: 768px) {
    .brands-container {
      grid-template-columns: repeat(2, 1fr);
      gap: 16px;
    }

    .brands-view-all {
      font-size: 13px;
      padding: 8px 18px;
    }
  }
</style>