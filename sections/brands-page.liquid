<style>
  .brands-section {
    padding: 40px 20px;
    text-align: center;
  }

  .brands-header h2 {
    font-size: 2rem;
    margin-bottom: 10px;
  }

  .brands-header p {
    font-size: 1rem;
    color: #333;
    margin-bottom: 30px;
  }

  .brands-button-container {
    margin-bottom: 40px;
  }

  .brands-view-all {
    background-color: #002147;
    color: white;
    padding: 12px 30px;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 600;
    display: inline-block;
    transition: background-color 0.3s ease;
  }

  .brands-view-all:hover {
    background-color: #003366;
  }

  .brands-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 30px;
    justify-items: center;
  }

  .brand-card {
    background-color: white;
    padding: 10px;
    border-radius: 10px;
    box-shadow: 0px 4px 8px rgba(0,0,0,0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100px;
    width: 100%;
    max-width: 180px;
    transition: transform 0.2s ease;
  }

  .brand-card:hover {
    transform: translateY(-4px);
  }

  .brand-card img {
    max-height: 60px;
    max-width: 100%;
    object-fit: contain;
  }

  @media screen and (max-width: 768px) {
    .brands-container {
      gap: 20px;
    }
  }
</style>

<section class="brands-section">
  <div class="brands-header">
    <h2>{{ section.settings.title }}</h2>
    <p>{{ section.settings.subtext }}</p>
  </div>

  {% if section.settings.button_label != blank and section.settings.button_link != blank %}
    <div class="brands-button-container">
      <a href="{{ section.settings.button_link }}" class="brands-view-all">{{ section.settings.button_label }}</a>
    </div>
  {% endif %}

  <div class="brands-container">
    {% for block in section.blocks %}
      {% if block.settings.brand_logo != blank %}
        <a href="{{ block.settings.brand_link }}" class="brand-card">
          <img src="{{ block.settings.brand_logo | img_url: 'medium' }}" alt="{{ block.settings.brand_name }}">
        </a>
      {% endif %}
    {% endfor %}
  </div>
</section>
