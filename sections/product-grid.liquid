<section class="collection-page">
  <div class="collection-container">
    <!-- Barra de filtros -->
    <aside class="filters">
      <h3>Filtros</h3>

      <div class="filter-group">
        <h4>Marca</h4>
        <ul>
          {% for brand in shop.metaobjects.brand.values %}
            <li><input type="checkbox" name="brand" value="{{ brand }}"> {{ brand }}</li>
          {% endfor %}
        </ul>
      </div>

      <div class="filter-group">
        <h4>Categoría</h4>
        <ul>
          {% for category in shop.metaobjects.category.values %}
            <li><input type="checkbox" name="category" value="{{ category }}"> {{ category }}</li>
          {% endfor %}
        </ul>
      </div>

      <div class="filter-group">
        <h4>Tipo</h4>
        <ul>
          <li><input type="checkbox" name="tipo" value="original"> Original</li>
          <li><input type="checkbox" name="tipo" value="generico"> Genérico</li>
          <li><input type="checkbox" name="tipo" value="strongh"> Strong H</li>
        </ul>
      </div>
    </aside>

    <!-- Grid de productos -->
    <div class="product-grid">
      {% for product in collection.products %}
        <div class="product-card">
          <a href="{{ product.url }}">
            <img src="{{ product.featured_image | image_url: width: 400 }}" alt="{{ product.title }}">
            <h5>{{ product.title }}</h5>
            <p class="price">{{ product.price | money }}</p>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
.collection-page {
  max-width: 1200px;
  margin: 40px auto;
  padding: 0 20px;
}

.collection-container {
  display: flex;
  flex-wrap: wrap;
  gap: 40px;
}

.filters {
  flex: 0 0 250px;
  background-color: #f7f7f7;
  padding: 20px;
  border-radius: 10px;
}

.filters h3 {
  margin-bottom: 20px;
  font-size: 24px;
}

.filter-group {
  margin-bottom: 20px;
}

.filter-group h4 {
  margin-bottom: 10px;
  font-size: 18px;
}

.filter-group ul {
  list-style: none;
  padding: 0;
}

.filter-group li {
  margin-bottom: 8px;
}

.product-grid {
  flex: 1;
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
  gap: 20px;
}

.product-card {
  background: white;
  padding: 15px;
  border-radius: 10px;
  text-align: center;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  transition: transform 0.3s;
}

.product-card:hover {
  transform: translateY(-5px);
}

.product-card img {
  width: 100%;
  height: auto;
  border-radius: 6px;
  margin-bottom: 10px;
}

.product-card h5 {
  font-size: 18px;
  margin-bottom: 5px;
  color: #333;
}

.product-card .price {
  color: #0056b3;
  font-size: 16px;
}

@media (max-width: 768px) {
  .collection-container {
    flex-direction: column;
  }
  .filters {
    width: 100%;
    margin-bottom: 20px;
  }
}
</style> 
