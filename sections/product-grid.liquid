<section class="product-grid">
  <div class="product-layout">
    <aside class="filters">
      <h3>Filtrar por</h3>
      <h4>Marca</h4>
      <!-- Espacio reservado para futuras marcas -->
      <h4>Categoría</h4>
      <!-- Espacio reservado para futuras categorías -->
      <h4>Tipo</h4>
      <ul>
        <li><a href="#">Original</a></li>
        <li><a href="#">Genérico</a></li>
        <li><a href="#">Strong H</a></li>
      </ul>
    </aside>

    <div class="products-container">
      {% if collection.products.size > 0 %}
        <div class="products-grid">
          {% for product in collection.products %}
            <a href="{{ product.url }}" class="product-card">
              <img src="{{ product.featured_image | image_url: width: 400 }}" alt="{{ product.title }}">
              <h3>{{ product.title }}</h3>
              {% if section.settings.show_vendor %}
                <p class="vendor">{{ product.vendor }}</p>
              {% endif %}
              <p class="price">{{ product.price | money }}</p>
            </a>
          {% endfor %}
        </div>
      {% else %}
        <p>No hay productos en esta colección todavía.</p>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Product Grid",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Mostrar marca del producto",
      "default": true
    },
    {
      "type": "range",
      "id": "products_per_page",
      "min": 4,
      "max": 48,
      "step": 4,
      "label": "Productos por página",
      "default": 24
    }
  ],
  "presets": [
    {
      "name": "Product Grid",
      "category": "Productos"
    }
  ]
}
{% endschema %}