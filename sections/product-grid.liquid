<section class="collection-page">
  <div class="collection-grid-container">
    <aside class="collection-filters">
      <h2>FILTROS</h2>
      <div class="filter-group">
        <h3>Marca</h3>
        <!-- Aquí luego podemos integrar los tags dinámicos de marcas -->
      </div>
      <div class="filter-group">
        <h3>Categoría</h3>
        <!-- Igual: integrar dinámico -->
      </div>
      <div class="filter-group">
        <h3>Tipo</h3>
        <label><input type="checkbox" value="Original"> Original</label><br>
        <label><input type="checkbox" value="Genérico"> Genérico</label><br>
        <label><input type="checkbox" value="Strong H"> Strong H</label>
      </div>
    </aside>

    <div class="collection-products">
      {% paginate collection.products by 24 %}
        <div class="products-grid">
          {% for product in collection.products %}
            <div class="product-card">
              <a href="{{ product.url }}">
                <img src="{{ product.featured_image | image_url: width: 400 }}" alt="{{ product.title }}">
                <h3>{{ product.title }}</h3>
                <p class="price">{{ product.price | money }}</p>
              </a>
            </div>
          {% endfor %}
        </div>

        <div class="pagination">
          {{ paginate | default_pagination }}
        </div>
      {% endpaginate %}
    </div>
  </div>
</section>
