<section class="services-description">
  <div class="services-container">
    <h2>{{ section.settings.title | escape }}</h2>
    <p>{{ section.settings.description | escape }}</p>
  </div>
</section>

<style>
.services-description {
  padding: 60px 20px;
  background-color: #ffffff;
  text-align: center;
}

.services-container {
  max-width: 800px;
  margin: 0 auto;
}

.services-container h2 {
  font-size: 32px;
  margin-bottom: 20px;
  text-transform: uppercase;
}

.services-container p {
  font-size: 18px;
  color: #666;
}
</style>

{% schema %}
{
  "name": "Descripción de Servicios",
  "tag": "section",
  "class": "services-description",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título Principal",
      "default": "¿QUÉ HACEMOS?"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Descripción",
      "default": "En SOLTEX ofrecemos soluciones completas para la industria textil: venta de partes, venta de máquinas, reparaciones electrónicas y renta de máquinas industriales."
    }
  ],
  "presets": [
    {
      "name": "Descripción de Servicios",
      "category": "Secciones"
    }
  ]
}
{% endschema %}
