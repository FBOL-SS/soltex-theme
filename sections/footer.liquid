<footer class="footer">
  <div class="footer-container">
    <div class="footer-left">
      <img src="{{ 'logo_soltex.svg' | asset_url }}" alt="SOLTEX Logo" class="footer-logo" />
    </div>
    <div class="footer-right">
      <div class="footer-info">
        <h2>{{ section.settings.company_name | escape }}</h2>
        <p>{{ section.settings.address | escape }}</p>
        <p><a href="tel:{{ section.settings.phone }}">{{ section.settings.phone }}</a></p>
        <p><a href="mailto:{{ section.settings.email }}">{{ section.settings.email }}</a></p>
      </div>
      <div class="footer-socials">
        {% if section.settings.facebook_url %}
          <a href="{{ section.settings.facebook_url }}" target="_blank" aria-label="Facebook">
            <img src="{{ 'icon-facebook.png' | asset_url }}" alt="Facebook" />
          </a>
        {% endif %}
        {% if section.settings.instagram_url %}
          <a href="{{ section.settings.instagram_url }}" target="_blank" aria-label="Instagram">
            <img src="{{ 'icon-instagram.png' | asset_url }}" alt="Instagram" />
          </a>
        {% endif %}
        {% if section.settings.linkedin_url %}
          <a href="{{ section.settings.linkedin_url }}" target="_blank" aria-label="LinkedIn">
            <img src="{{ 'icon-linkedin.png' | asset_url }}" alt="LinkedIn" />
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</footer>

<style>
.footer {
  background-color: #001F3F;
  color: #FFFFFF;
  padding: 40px 20px;
}

.footer-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
  max-width: 1200px;
  margin: 0 auto;
}

.footer-left {
  flex: 1 1 200px;
  text-align: center;
  margin-bottom: 20px;
}

.footer-logo {
  max-width: 150px;
  height: auto;
}

.footer-right {
  flex: 2 1 500px;
  text-align: center;
}

.footer-info h2 {
  font-size: 24px;
  margin-bottom: 10px;
  text-transform: uppercase;
}

.footer-info p {
  margin: 5px 0;
  font-size: 16px;
}

.footer-info a {
  color: #FFFFFF;
  text-decoration: none;
}

.footer-info a:hover {
  text-decoration: underline;
}

.footer-socials {
  margin-top: 20px;
}

.footer-socials a {
  display: inline-block;
  margin: 0 10px;
}

.footer-socials img {
  width: 28px;
  height: 28px;
  filter: brightness(0) invert(1);
  transition: transform 0.2s;
}

.footer-socials img:hover {
  transform: scale(1.1);
}

/* Responsive para m√≥viles */
@media (max-width: 768px) {
  .footer-container {
    flex-direction: column;
  }

  .footer-left, .footer-right {
    text-align: center;
  }
}
</style>
