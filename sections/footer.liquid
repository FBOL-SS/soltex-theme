<footer class="site-footer">
  <div class="footer-container">
    <div class="footer-branding">
      {% if section.settings.footer_logo %}
        <img src="{{ section.settings.footer_logo | img_url: 'medium' }}" alt="Logo" class="footer-logo" />
      {% endif %}
      <p>{{ section.settings.footer_text }}</p>
    </div>

    <div class="footer-links">
      {% if section.settings.social_1_icon != blank %}
        <a href="{{ section.settings.social_1_url }}" class="footer-link" target="_blank">
          <div class="footer-card">
            <img src="{{ section.settings.social_1_icon | img_url: '50x50' }}" alt="Icono 1" />
            <span>{{ section.settings.social_1_label }}</span>
          </div>
        </a>
      {% endif %}

      {% if section.settings.social_2_icon != blank %}
        <a href="{{ section.settings.social_2_url }}" class="footer-link" target="_blank">
          <div class="footer-card">
            <img src="{{ section.settings.social_2_icon | img_url: '50x50' }}" alt="Icono 2" />
            <span>{{ section.settings.social_2_label }}</span>
          </div>
        </a>
      {% endif %}

      {% if section.settings.social_3_icon != blank %}
        <a href="{{ section.settings.social_3_url }}" class="footer-link" target="_blank">
          <div class="footer-card">
            <img src="{{ section.settings.social_3_icon | img_url: '50x50' }}" alt="Icono 3" />
            <span>{{ section.settings.social_3_label }}</span>
          </div>
        </a>
      {% endif %}
    </div>
  </div>

  <div class="footer-bottom">
    <p>&copy; {{ 'now' | date: "%Y" }} {{ shop.name }}. Todos los derechos reservados.</p>
  </div>
</footer>

<style>
.site-footer {
  background-color: #001F3F;
  color: white;
  padding: 40px 20px 20px;
  font-size: 14px;
  text-align: center;
}

.footer-container {
  display: flex;
  flex-direction: column;
  gap: 30px;
  max-width: 1200px;
  margin: 0 auto;
  align-items: center;
}

.footer-branding {
  max-width: 400px;
}

.footer-logo {
  max-height: 60px;
  margin-bottom: 10px;
}

.footer-links {
  display: flex;
  gap: 20px;
  flex-wrap: wrap;
  justify-content: center;
}

.footer-card {
  background-color: white;
  color: #001F3F;
  padding: 10px 15px;
  border-radius: 8px;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 110px;
  height: 110px;
  font-weight: 600;
  font-size: 14px;
  transition: transform 0.2s;
}

.footer-card:hover {
  transform: translateY(-3px);
}

.footer-card img {
  max-height: 40px;
  margin-bottom: 8px;
}

.footer-bottom {
  border-top: 1px solid rgba(255,255,255,0.2);
  margin-top: 30px;
  padding-top: 10px;
}
</style>

{% schema %}
