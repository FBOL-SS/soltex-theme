<footer class="footer">
    <div class="footer-container">
      <div class="footer-info">
        <h2>{{ section.settings.company_name | escape }}</h2>
        <p>{{ section.settings.address | escape }}</p>
        <p><a href="tel:{{ section.settings.phone }}">{{ section.settings.phone }}</a></p>
        <p><a href="mailto:{{ section.settings.email }}">{{ section.settings.email }}</a></p>
      </div>
      <div class="footer-socials">
        {% if section.settings.facebook_url %}
          <a href="{{ section.settings.facebook_url }}" target="_blank" aria-label="Facebook">
            <img src="https://cdn-icons-png.flaticon.com/512/145/145802.png" alt="Facebook" />
          </a>
        {% endif %}
        {% if section.settings.instagram_url %}
          <a href="{{ section.settings.instagram_url }}" target="_blank" aria-label="Instagram">
            <img src="https://cdn-icons-png.flaticon.com/512/2111/2111463.png" alt="Instagram" />
          </a>
        {% endif %}
        {% if section.settings.linkedin_url %}
          <a href="{{ section.settings.linkedin_url }}" target="_blank" aria-label="LinkedIn">
            <img src="https://cdn-icons-png.flaticon.com/512/145/145807.png" alt="LinkedIn" />
          </a>
        {% endif %}
      </div>
    </div>
  </footer>
  
  <style>
  .footer {
    background-color: #001F3F;
    color: #FFFFFF;
    padding: 60px 20px;
    text-align: center;
  }
  
  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .footer-info h2 {
    font-size: 28px;
    margin-bottom: 20px;
    text-transform: uppercase;
  }
  
  .footer-info p {
    margin: 5px 0;
    font-size: 16px;
  }
  
  .footer-info a {
    color: #FFFFFF;
    text-decoration: none;
  }
  
  .footer-info a:hover {
    text-decoration: underline;
  }
  
  .footer-socials {
    margin-top: 30px;
  }
  
  .footer-socials a {
    display: inline-block;
    margin: 0 10px;
  }
  
  .footer-socials img {
    width: 32px;
    height: 32px;
    filter: brightness(0) invert(1);
    transition: transform 0.2s;
  }
  
  .footer-socials img:hover {
    transform: scale(1.1);
  }
  </style>
  
  {% schema %}
  {
    "name": "Pie de Página",
    "tag": "section",
    "class": "soltex-footer",
    "settings": [
      {
        "type": "text",
        "id": "company_name",
        "label": "Nombre de la empresa",
        "default": "SOLTEX"
      },
      {
        "type": "text",
        "id": "address",
        "label": "Dirección",
        "default": "Calle Ficticia #123, Torreón, Coahuila"
      },
      {
        "type": "text",
        "id": "phone",
        "label": "Teléfono",
        "default": "+52 871 123 4567"
      },
      {
        "type": "text",
        "id": "email",
        "label": "Correo electrónico",
        "default": "info@soltex.com"
      },
      {
        "type": "url",
        "id": "facebook_url",
        "label": "Link a Facebook"
      },
      {
        "type": "url",
        "id": "instagram_url",
        "label": "Link a Instagram"
      },
      {
        "type": "url",
        "id": "linkedin_url",
        "label": "Link a LinkedIn"
      }
    ],
    "presets": [
      {
        "name": "Footer",
        "category": "Pie de página"
      }
    ]
  }
  {% endschema %}
  