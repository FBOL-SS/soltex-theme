<section class="site-footer">
  <div class="footer-content">
    {% for block in section.blocks %}
      <div class="footer-card">
        <a href="{{ block.settings.url }}" target="_blank">
          <img src="{{ block.settings.image | img_url: '100x100' }}" alt="icono">
        </a>
      </div>
    {% endfor %}
  </div>
  <div class="footer-bottom">
    <p>{{ section.settings.footer_text }}</p>
  </div>
</section>

<style>
.site-footer {
  background-color: #001F3F;
  color: white;
  padding: 40px 20px;
  text-align: center;
}
.footer-content {
  display: flex;
  justify-content: center;
  gap: 20px;
  flex-wrap: wrap;
  margin-bottom: 20px;
}
.footer-card img {
  max-width: 40px;
  transition: transform 0.3s;
}
.footer-card img:hover {
  transform: scale(1.1);
}
.footer-bottom p {
  font-size: 14px;
  opacity: 0.7;
}
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "footer_text",
      "label": "Texto inferior",
      "default": "© 2025 Sewing Solution. Todos los derechos reservados."
    }
  ],
  "blocks": [
    {
      "type": "icon",
      "name": "Icono",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Ícono"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Enlace"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Footer con íconos",
      "blocks": [
        {
          "type": "icon"
        }
      ]
    }
  ]
}
{% endschema %}

