  "name": "Pie de página",
  "settings": [
    {
      "type": "image_picker",
      "id": "footer_logo",
      "label": "Logo del footer"
    },
    {
      "type": "text",
      "id": "footer_text",
      "label": "Texto del footer",
      "default": "Gracias por visitar nuestro sitio web."
    },
    {
      "type": "image_picker",
      "id": "social_1_icon",
      "label": "Ícono 1"
    },
    {
      "type": "text",
      "id": "social_1_label",
      "label": "Texto 1",
      "default": "Instagram"
    },
    {
      "type": "url",
      "id": "social_1_url",
      "label": "Enlace 1"
    },
    {
      "type": "image_picker",
      "id": "social_2_icon",
      "label": "Ícono 2"
    },
    {
      "type": "text",
      "id": "social_2_label",
      "label": "Texto 2",
      "default": "WhatsApp"
    },
    {
      "type": "url",
      "id": "social_2_url",
      "label": "Enlace 2"
    },
    {
      "type": "image_picker",
      "id": "social_3_icon",
      "label": "Ícono 3"
    },
    {
      "type": "text",
      "id": "social_3_label",
      "label": "Texto 3",
      "default": "LinkedIn"
    },
    {
      "type": "url",
      "id": "social_3_url",
      "label": "Enlace 3"
    }
  ],
  "presets": [
    {
      "name": "Footer Profesional"
    }
  ]
}
{% endschema %}
