<footer class="site-footer">
  <div class="footer-container">
    <div class="footer-branding">
      {% if section.settings.footer_logo %}
        <img src="{{ section.settings.footer_logo | img_url: 'medium' }}" alt="Logo" class="footer-logo" />
      {% endif %}
      <p>{{ section.settings.footer_text }}</p>
    </div>

    <div class="footer-links">
      {% for block in section.blocks %}
        {% if block.settings.icon != blank %}
          <a href="{{ block.settings.link }}" class="footer-link" target="_blank">
            <div class="footer-card {{ block.settings.label | downcase }}">
              <img src="{{ block.settings.icon | img_url: '50x50' }}" alt="{{ block.settings.label }}" />
              <span>{{ block.settings.label }}</span>
            </div>
          </a>
        {% endif %}
      {% endfor %}
    </div>
  </div>

  <div class="footer-bottom">
    <p>© {{ 'now' | date: "%Y" }} {{ shop.name }}. Todos los derechos reservados.</p>
  </div>
</footer>

<style>
.site-footer {
  background-color: #001F3F;
  color: white;
  padding: 40px 20px 20px;
  font-size: 14px;
  text-align: center;
}

.footer-container {
  display: flex;
  flex-direction: column;
  gap: 30px;
  max-width: 1200px;
  margin: 0 auto;
  align-items: center;
}

.footer-branding {
  max-width: 400px;
}

.footer-logo {
  max-height: 60px;
  margin-bottom: 10px;
}

.footer-links {
  display: flex;
  gap: 20px;
  flex-wrap: wrap;
  justify-content: center;
}

.footer-card {
  background-color: transparent;
  border-radius: 50%;
  padding: 0;
  width: auto;
  height: auto;
  transition: transform 0.2s;
}

.footer-card img {
  width: 40px;
  height: 40px;
  object-fit: contain;
  transition: transform 0.2s, filter 0.2s;
}

.footer-card:hover img {
  transform: scale(1.1);
  filter: brightness(1.2);
}

.footer-bottom {
  border-top: 1px solid rgba(255, 255, 255, 0.2);
  margin-top: 30px;
  padding-top: 10px;
}
</style>

{% schema %}
{
  "name": "Pie de página",
  "settings": [
    {
      "type": "image_picker",
      "id": "footer_logo",
      "label": "Logo del footer"
    },
    {
      "type": "text",
      "id": "footer_text",
      "label": "Texto del footer",
      "default": "Gracias por visitar nuestro sitio web."
    }
  ],
  "blocks": [
    {
      "type": "social_link",
      "name": "Enlace de red social",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Ícono"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Etiqueta",
          "default": "Red social"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Enlace"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer Profesional"
    }
  ]
}
{% endschema %}
