{% if section.settings.collection != blank %}
  {% assign current_collection = collections[section.settings.collection] %}
  {% if current_collection.products_count > 0 %}
    <div class="products-grid">
      {% for product in current_collection.products %}
        <div class="product-item">
          <a href="{{ product.url }}">
            <img src="{{ product.featured_image | image_url: width: 400 }}" alt="{{ product.title }}" class="product-image" />
            <h3 class="product-title">{{ product.title }}</h3>
            <p class="product-price">{{ product.price | money }}</p>
          </a>
        </div>
      {% endfor %}
    </div>
  {% else %}
    <p>No hay productos en esta colección todavía.</p>
  {% endif %}
{% else %}
  <p>No se ha seleccionado ninguna colección.</p>
{% endif %}

<style>
.products-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 30px;
  padding: 40px 20px;
}

.product-item {
  background: #fff;
  border-radius: 8px;
  padding: 20px;
  text-align: center;
  transition: transform 0.2s ease;
  box-shadow: 0 2px 6px rgba(0,0,0,0.1);
}

.product-item:hover {
  transform: translateY(-5px);
}

.product-image {
  max-width: 100%;
  height: auto;
  margin-bottom: 15px;
  border-radius: 5px;
}

.product-title {
  font-size: 18px;
  margin-bottom: 5px;
  font-weight: 600;
}

.product-price {
  font-size: 16px;
  color: #333;
}
</style>

{% schema %}
{
  "name": "Productos del Catálogo",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Colección de productos"
    }
  ],
  "presets": [
    {
      "name": "Productos del Catálogo"
    }
  ]
}
{% endschema %}
