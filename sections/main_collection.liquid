{% if section.settings.collection != blank %}
  {% assign current_collection = collections[section.settings.collection] %}

  <!-- 游댌 Search Bar -->
  <div class="search-bar-container">
    <form action="/search" method="get" role="search" class="search-form">
      <input
        type="search"
        name="q"
        placeholder="Buscar productos..."
        aria-label="Buscar productos"
        class="search-input"
      />
      <button type="submit" class="search-button">Buscar</button>
    </form>
  </div>

  {% if current_collection.products_count > 0 %}
    <div class="products-grid">
      {% for product in current_collection.products %}
        <div class="product-item">
          <a href="{{ product.url }}">
            <img src="{{ product.featured_image | image_url: width: 400 }}" alt="{{ product.title }}" class="product-image" />
            <h3 class="product-title">{{ product.title }}</h3>
            <p class="product-price">{{ product.price | money }}</p>
          </a>
        </div>
      {% endfor %}
    </div>
  {% else %}
    <p>No hay productos en esta colecci칩n todav칤a.</p>
  {% endif %}
{% else %}
  <p>No se ha seleccionado ninguna colecci칩n.</p>
{% endif %}

<style>
.search-bar-container {
  width: 100%;
  max-width: 700px;
  margin: 0 auto 40px auto;
  padding: 0 20px;
}

.search-form {
  display: flex;
  justify-content: center;
  align-items: center;
}

.search-input {
  flex-grow: 1;
  padding: 12px 16px;
  border-radius: 8px 0 0 8px;
  border: 1px solid #ccc;
  font-size: 16px;
  outline: none;
}

.search-button {
  padding: 12px 24px;
  background-color: #002147;
  color: #ffffff;
  border: none;
  border-radius: 0 8px 8px 0;
  cursor: pointer;
  font-weight: bold;
  transition: background-color 0.2s ease;
}

.search-button:hover {
  background-color: #003366;
}

.products-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 30px;
  padding: 40px 20px;
}

.product-item {
  background: #fff;
  border-radius: 8px;
  padding: 20px;
  text-align: center;
  transition: transform 0.2s ease;
  box-shadow: 0 2px 6px rgba(0,0,0,0.1);
}

.product-item:hover {
  transform: translateY(-5px);
}

.product-image {
  max-width: 100%;
  height: auto;
  margin-bottom: 15px;
  border-radius: 5px;
}

.product-title {
  font-size: 18px;
  margin-bottom: 5px;
  font-weight: 600;
}

.product-price {
  font-size: 16px;
  color: #333;
}
</style>

