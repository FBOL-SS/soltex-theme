  "name": "Productos del Cat치logo",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Colecci칩n de productos"
    }
  ],
  "presets": [
    {
      "name": "Productos del Cat치logo"
    }
  ]
}
{% endschema %}
