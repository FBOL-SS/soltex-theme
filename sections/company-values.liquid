{% schema %}
{
  "name": "Valores de la Empresa",
  "settings": [
    { "type": "text", "id": "section_title", "label": "Título de la Sección", "default": "Nuestros Valores" }
  ],
  "blocks": [
    {
      "type": "valor",
      "name": "Valor",
      "settings": [
        { "type": "text", "id": "value_title", "label": "Título del Valor" },
        { "type": "text", "id": "value_description", "label": "Descripción Corta" },
        { "type": "image_picker", "id": "icon", "label": "Ícono" }
      ]
    }
  ],
  "presets": [{ "name": "Valores de la Empresa" }]
}
{% endschema %}

<div class="company-values">
  <h2 class="section-title">{{ section.settings.section_title }}</h2>
  <div class="values-container">
    {% for block in section.blocks %}
      <div class="value-card">
        {% if block.settings.icon != blank %}
          <img src="{{ block.settings.icon | img_url: 'small' }}" alt="Ícono">
        {% endif %}
        <h4>{{ block.settings.value_title }}</h4>
        <p>{{ block.settings.value_description }}</p>
      </div>
    {% endfor %}
  </div>
</div>
