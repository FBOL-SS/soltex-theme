<section class="carousel-section">
  <div class="page-width">
    <h2 class="carousel-heading">{{ section.settings.title }}</h2>
    <div class="carousel-wrapper">
      {% for block in section.blocks %}
        <div class="carousel-item">
          <img src="{{ block.settings.image | img_url: '800x800' }}" alt="{{ block.settings.alt_text | escape }}" loading="lazy">
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
.carousel-section {
  padding: 50px 0;
  background: #ffffff;
  text-align: center;
}

.carousel-heading {
  font-size: 32px;
  margin-bottom: 30px;
  font-weight: 700;
}

.carousel-wrapper {
  display: flex;
  overflow-x: auto;
  gap: 20px;
  scroll-snap-type: x mandatory;
  -webkit-overflow-scrolling: touch;
  padding: 10px 0;
}

.carousel-item {
  flex: 0 0 auto;
  scroll-snap-align: center;
  width: 300px;
  border-radius: 12px;
  box-shadow: 0 4px 10px rgba(0,0,0,0.1);
  background: white;
  overflow: hidden;
}

.carousel-item img {
  width: 100%;
  height: auto;
  display: block;
}
</style>

{% schema %}
{
  "name": "Carrusel de evolución",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "Nuestra Evolución"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Imagen",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagen"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Texto alternativo"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Carrusel Evolución",
      "category": "Contenido"
    }
  ]
}
{% endschema %}
