<section class="our-services">
  <div class="page-width">
    <h2>{{ section.settings.heading | escape }}</h2>
    <div class="services-grid">
      {% for block in section.blocks %}
        <div class="service-item">
          {% if block.settings.icon %}
            <img src="{{ block.settings.icon | img_url: 'medium' }}" alt="{{ block.settings.title }}">
          {% endif %}
          <h3>{{ block.settings.title | escape }}</h3>
          <p>{{ block.settings.description | escape }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
.our-services {
  padding: 80px 20px;
  background-color: #f2f2f2;
  text-align: center;
}

.services-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr); /* ðŸ”¥ 2 columnas */
  gap: 40px;
  max-width: 800px;
  margin: 0 auto;
}

.service-item img {
  width: 80px;
  height: 80px;
  object-fit: contain;
  margin-bottom: 20px;
}

.service-item h3 {
  font-size: 22px;
  margin-bottom: 10px;
  text-transform: uppercase;
}

.service-item p {
  font-size: 16px;
  color: #555;
}
</style>

