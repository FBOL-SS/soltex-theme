<section class="our-services">
  <div class="services-grid">
    {% for block in section.blocks %}
      <div class="service-item">
        {% if block.settings.image %}
          <img src="{{ block.settings.image | image_url: width: 100 }}" alt="{{ block.settings.title }}" />
        {% endif %}
        <h3>{{ block.settings.title | escape }}</h3>
        <p>{{ block.settings.description | escape }}</p>
      </div>
    {% endfor %}
  </div>
</section>

<style>
.our-services {
  padding: 80px 20px;
  background-color: #f2f2f2;
  text-align: center;
}

.services-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 40px;
  max-width: 1200px;
  margin: 0 auto;
}

.service-item img {
  width: 80px;
  height: 80px;
  object-fit: contain;
  margin-bottom: 20px;
}

.service-item h3 {
  font-size: 22px;
  margin-bottom: 10px;
  text-transform: uppercase;
}

.service-item p {
  font-size: 16px;
  color: #555;
}
</style>

{% schema %}
{
  "name": "Nuestros Servicios",
  "tag": "section",
  "class": "our-services",
  "settings": [],
  "blocks": [
    {
      "type": "service",
      "name": "Servicio",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Icono/Imagen"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Título"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Descripción"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Nuestros Servicios",
      "category": "Secciones"
    }
  ]
}
{% endschema %}
