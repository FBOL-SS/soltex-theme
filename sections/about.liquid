{% schema %}
{
  "name": "Sobre Nosotros",
  "tag": "section",
  "class": "about-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Título principal",
      "default": "¿QUIÉNES SOMOS?"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Texto de descripción",
      "default": "Soltex nace en el norte del país, impulsada por más de 30 años de experiencia en la industria textil."
    }
  ],
  "presets": [
    {
      "name": "Sobre Nosotros"
    }
  ]
}
{% endschema %}

{% style %}
.about-section {
  padding: 40px 20px;
  text-align: center;
  max-width: 800px;
  margin: 0 auto;
}

.about-section h2 {
  font-size: 2rem;
  font-weight: bold;
  margin-bottom: 20px;
}

.about-text p {
  margin-bottom: 1rem;
  line-height: 1.6;
  white-space: pre-line;
  color: #333;
  font-size: 1rem;
}
{% endstyle %}

<section class="about-section">
  <h2>{{ section.settings.heading }}</h2>
  <div class="about-text">
    <p>{{ section.settings.description }}</p>
  </div>
</section>
