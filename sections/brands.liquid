<section class="brands-section">
  <div class="container">
    <h2 class="brands-title">{{ section.settings.heading }}</h2>
    <p class="brands-subtext">{{ section.settings.subtext }}</p>

    <div class="brands-grid">
      {% for block in section.blocks %}
        <a href="{{ block.settings.link | default: '#' }}" class="brand-logo-link">
          <img src="{{ block.settings.image | image_url: width: 300 }}" alt="{{ block.settings.name | escape }}">
        </a>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Brands Grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Título",
      "default": "NUESTRAS MARCAS"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtexto",
      "default": "En Soltex nos enorgullece distribuir las marcas más confiables de la industria textil. Garantizamos calidad, respaldo y la mejor atención para cada uno de nuestros clientes."
    }
  ],
  "blocks": [
    {
      "type": "brand",
      "name": "Marca",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Logo de la marca"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Nombre de la marca"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Enlace de la marca"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Brands Grid",
      "category": "Secciones personalizadas"
    }
  ]
}
{% endschema %}
