<section class="brands-page">
  
  <!-- Banner superior -->
  <div class="brands-banner">
    <div class="brands-banner-container">
      <h1 class="brands-banner-title">{{ section.settings.banner_title }}</h1>
      <p class="brands-banner-text">
        {{ section.settings.banner_text }}
      </p>
    </div>
  </div>

  <!-- Grid de logos -->
  <div class="brands-grid">
    {% for brand in section.blocks %}
      <div class="brand-item">
        <a href="{{ brand.settings.brand_link }}">
          <img src="{{ brand.settings.brand_logo | asset_url }}" alt="{{ brand.settings.brand_name }}">
        </a>
      </div>
    {% endfor %}
  </div>

</section>

{% schema %}
{
  "name": "Marcas",
  "settings": [
    {
      "type": "text",
      "id": "banner_title",
      "label": "Título del Banner",
      "default": "NUESTRAS MARCAS"
    },
    {
      "type": "textarea",
      "id": "banner_text",
      "label": "Texto del Banner",
      "default": "En Soltex nos enorgullece distribuir las marcas más confiables de la industria textil. Garantizamos calidad, respaldo y la mejor atención para cada uno de nuestros clientes."
    }
  ],
  "blocks": [
    {
      "type": "brand",
      "name": "Marca",
      "settings": [
        {
          "type": "image_picker",
          "id": "brand_logo",
          "label": "Logo de la marca"
        },
        {
          "type": "text",
          "id": "brand_name",
          "label": "Nombre de la marca",
          "default": "Marca"
        },
        {
          "type": "url",
          "id": "brand_link",
          "label": "Link hacia colección filtrada"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Marcas - Página",
      "category": "Página personalizada"
    }
  ]
}
{% endschema %}
