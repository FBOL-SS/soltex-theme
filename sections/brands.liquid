<section class="brands-section">
  <div class="brands-banner">
    <h2 class="brands-title">{{ section.settings.heading }}</h2>
    <p class="brands-subtext">{{ section.settings.subtext }}</p>
  </div>

  <div class="brands-grid">
    {% for block in section.blocks %}
      {% if block.settings.logo != blank %}
        <a href="{{ block.settings.link | default: '#' }}" class="brand-logo-card">
          <img src="{{ block.settings.logo | img_url: '300x' }}" alt="{{ block.settings.name }}" loading="lazy">
        </a>
      {% endif %}
    {% endfor %}
  </div>
  <div class="view-all-button">
  <a href="/collections/all" class="view-all-link">
    Ver todos los productos
  </a>
</div>

</section>

{% schema %}
{
  "name": "Marcas",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Título",
      "default": "NUESTRAS MARCAS"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtexto",
      "default": "En Soltex nos enorgullece distribuir las marcas más confiables de la industria textil. Garantizamos calidad, respaldo y la mejor atención para cada uno de nuestros clientes."
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Marca",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo de la marca"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Enlace de la marca"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Marcas",
      "category": "Banners"
    }
  ]
}
{% endschema %}
