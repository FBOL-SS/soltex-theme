<section class="brands-section">
  <div class="brands-container">
    {% if section.settings.brands_heading != blank %}
      <h2 class="brands-heading">{{ section.settings.brands_heading }}</h2>
    {% endif %}
    
    <div class="brands-grid">
      {% for block in section.blocks %}
        <a href="{{ block.settings.brand_link }}" class="brand-logo" {% if block.settings.brand_link == blank %}style="pointer-events: none;"{% endif %}>
          {% if block.settings.brand_logo %}
            <img src="{{ block.settings.brand_logo | image_url: width: 300 }}" alt="Logo {{ block.settings.brand_logo.alt | escape }}">
          {% endif %}
        </a>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .brands-section {
    padding: 60px 20px;
    background-color: #ffffff;
    text-align: center;
  }

  .brands-heading {
    font-size: 32px;
    margin-bottom: 40px;
    text-transform: uppercase;
    font-weight: 700;
    color: #002f6c;
  }

  .brands-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 30px;
    justify-content: center;
    align-items: center;
  }

  .brand-logo {
    width: 150px;
    height: auto;
    display: block;
    transition: transform 0.3s ease;
  }

  .brand-logo img {
    width: 100%;
    height: auto;
    object-fit: contain;
    filter: grayscale(0%);
    transition: filter 0.3s ease;
  }

  .brand-logo:hover img {
    filter: grayscale(0%) brightness(1.2);
    transform: scale(1.05);
  }

  @media (max-width: 768px) {
    .brands-grid {
      gap: 20px;
    }

    .brand-logo {
      width: 100px;
    }
  }
</style>

