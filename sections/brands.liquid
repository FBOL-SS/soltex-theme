<section class="brands-section">
  <div class="brands-container">
    <h2 class="brands-title">{{ section.settings.title }}</h2>
    <p class="brands-subtitle">{{ section.settings.subtitle }}</p>

    <div class="brands-logos">
      {% for block in section.blocks %}
        <a href="{{ block.settings.link }}" class="brand-logo">
          <img src="{{ block.settings.logo | image_url: width: 300 }}" alt="{{ block.settings.name }}">
        </a>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Marcas",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "NUESTRAS MARCAS"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtítulo",
      "default": "En Soltex nos enorgullece distribuir las marcas más confiables de la industria textil. Garantizamos calidad, respaldo y la mejor atención para cada uno de nuestros clientes."
    }
  ],
  "blocks": [
    {
      "type": "brand",
      "name": "Marca",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo de la marca"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Nombre de la marca"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Enlace de la marca"
        }
      ]
    }
  ],
  "max_blocks": 50,
  "presets": [
    {
      "name": "Marcas"
    }
  ]
}
{% endschema %}
