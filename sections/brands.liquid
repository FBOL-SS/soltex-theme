<section class="brands-grid">
  <div class="brands-container">

    {% assign brands = 
      "yamato,juki,durkopp_adler,brother,pegasus,kansai_special,siruba,sunstar,singer,union_special,mitsubishi,seiko,avery_dennison,feedrail,pfaff,jack,hirose,cm_cerliani,koban,universal"
      | split: "," %}

    {% for brand in brands %}
      <div class="brand-item">
        <a href="#" title="{{ brand | replace: '_', ' ' | capitalize }}">
          <img 
            src="{{ brand | prepend: 'logo_' | append: '.png' | asset_url }}" 
            alt="{{ brand | replace: '_', ' ' | capitalize }} logo">
        </a>
      </div>
    {% endfor %}

  </div>
</section>

{% schema %}
{
  "name": "Brands Grid",
  "tag": "section",
  "class": "brands-grid-section",
  "settings": [],
  "presets": [
    {
      "name": "Brands Grid",
      "category": "Custom"
    }
  ]
}
{% endschema %}