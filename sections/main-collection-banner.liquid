<style>
  .collection-banner {
  padding: 60px 20px;
  background-color: #f4f4f4;
  text-align: center;
}

.collection-banner h2 {
  font-size: 2rem;
  margin-bottom: 10px;
  color: #002147;
}

.collection-banner p {
  font-size: 1rem;
  max-width: 600px;
  margin: 0 auto;
  color: #333;
}

@media screen and (max-width: 768px) {
  .collection-banner {
    padding: 40px 15px;
  }

  .collection-banner h2 {
    font-size: 1.5rem;
  }

  .collection-banner p {
    font-size: 0.95rem;
  }
}
</style>

<section class="banner-section">
  <div class="banner-content">
    <h2>{{ section.settings.title }}</h2>
    <p>{{ section.settings.subtext }}</p>
  </div>
</section>

{% schema %}
{
  "name": "Banner Principal",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "CATÁLOGO GENERAL"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtexto",
      "default": "Explora toda nuestra línea de productos disponibles para la industria textil."
    }
  ],
  "presets": [
    {
      "name": "Banner Principal",
      "category": "Banner"
    }
  ]
}
{% endschema %}
