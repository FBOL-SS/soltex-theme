<section class="collection-banner">
  <div class="collection-banner-content">
    <h1 class="collection-banner-heading">{{ section.settings.heading }}</h1>
    <p class="collection-banner-subtext">{{ section.settings.subtext }}</p>
  </div>
</section>

{% schema %}
{
  "name": "Main Collection Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Título",
      "default": "Catálogo General"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtexto",
      "default": "Explora toda nuestra línea de productos disponibles para la industria textil."
    }
  ],
  "presets": [
    {
      "name": "Main Collection Banner",
      "category": "Banners"
    }
  ]
}
{% endschema %}
