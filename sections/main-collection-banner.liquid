<style>
  .banner-section {
    padding: 40px 20px;
    background-color: #ffffff;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    width: 100%;
  }

  .banner-section h2 {
    font-size: 2rem;
    margin-bottom: 10px;
    color: #002147;
    font-weight: 700;
  }

  .banner-section p {
    font-size: 1rem;
    color: #333;
    margin-bottom: 0;
    max-width: 800px;
  }
</style>

<section class="banner-section">
  <div class="banner-content">
    <h2>{{ section.settings.title }}</h2>
    <p>{{ section.settings.subtext }}</p>
  </div>
</section>

{% schema %}
{
  "name": "Banner Principal",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "CATÁLOGO GENERAL"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtexto",
      "default": "Explora toda nuestra línea de productos disponibles para la industria textil."
    }
  ],
  "presets": [
    {
      "name": "Banner Principal",
      "category": "Banner"
    }
  ]
}
{% endschema %}
