{% stylesheet %}
.collection-banner {
  background-color: #f8f8f8;
  padding: 40px 20px;
  text-align: center;
}

.collection-banner h2 {
  font-size: 2rem;
  font-weight: 600;
  margin-bottom: 10px;
  color: #000;
}

.collection-banner p {
  font-size: 1rem;
  color: #333;
  max-width: 600px;
  margin: 0 auto;
}
{% endstylesheet %}

<div class="collection-banner">
  <h2>{{ section.settings.heading }}</h2>
  <p>{{ section.settings.subtext }}</p>
</div>

{% schema %}
{
  "name": "Banner Principal",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Título",
      "default": "CATÁLOGO GENERAL"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtexto",
      "default": "Explora toda nuestra línea de productos disponibles para la industria textil."
    }
  ],
  "presets": [
    {
      "name": "Main Collection Banner",
      "category": "Banners"
    }
  ]
}
{% endschema %}
