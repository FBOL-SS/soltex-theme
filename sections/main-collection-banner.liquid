<section class="collection-banner">
  <div class="collection-banner-content">
    <h1 class="collection-banner-title">{{ section.settings.heading }}</h1>
    <p class="collection-banner-subtext">{{ section.settings.subtext }}</p>
  </div>
</section>

{% schema %}
{
  "name": "Main Collection Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Título",
      "default": "NUESTRAS MARCAS"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtexto",
      "default": "En Soltex nos enorgullece distribuir las marcas más confiables de la industria textil. Garantizamos calidad, respaldo y la mejor atención para cada uno de nuestros clientes."
    }
  ],
  "presets": [
    {
      "name": "Banner Principal de Colección",
      "category": "Banners"
    }
  ]
}
{% endschema %}
