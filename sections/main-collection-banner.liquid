<style>
  .banner-section {
  padding: 40px 20px;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  max-width: 960px;
  margin: 0 auto;
}

.banner-section h2 {
  font-size: 2.2rem;
  margin-bottom: 12px;
  color: #002147;
  font-weight: 700;
}

.banner-section p {
  font-size: 1.05rem;
  color: #333;
  max-width: 600px;
}

</style>

<section class="banner-section">
  <h2>{{ section.settings.title }}</h2>
  <p>{{ section.settings.subtext }}</p>
</section>

{% schema %}
{
  "name": "Banner Principal de Colección",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "CATÁLOGO GENERAL"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtexto",
      "default": "Explora toda nuestra línea de productos disponibles para la industria textil."
    }
  ],
  "presets": [
    {
      "name": "Banner Principal de Colección",
      "category": "Banner"
    }
  ]
}
{% endschema %}
