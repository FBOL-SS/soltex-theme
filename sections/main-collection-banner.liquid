<style>
  .collection-banner {
  text-align: center;
  padding: 50px 20px;
}

.collection-banner-content {
  max-width: 800px;
  margin: 0 auto;
}

.collection-banner h2 {
  font-size: 2rem;
  margin-bottom: 10px;
}

.collection-banner p {
  font-size: 1rem;
  color: #333;
}

@media (max-width: 768px) {
  .collection-banner h2 {
    font-size: 1.5rem;
  }

  .collection-banner p {
    font-size: 0.95rem;
    padding: 0 10px;
  }
}
</style>

<section class="collection-banner">
  <div class="collection-banner-content">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.subtext }}</p>
  </div>
</section>

{% schema %}
{
  "name": "Banner Principal",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "CATÁLOGO GENERAL"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtexto",
      "default": "Explora toda nuestra línea de productos disponibles para la industria textil."
    }
  ],
  "presets": [
    {
      "name": "Banner Principal",
      "category": "Banner"
    }
  ]
}
{% endschema %}
