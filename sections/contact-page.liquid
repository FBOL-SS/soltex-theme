<style>
.contact-wrapper {
  padding: 60px 20px;
  max-width: 1200px;
  margin: auto;
  background: #fff;
  border-radius: 12px;
}

.contact-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 40px;
}

.contact-info h2 {
  font-size: 28px;
  margin-bottom: 10px;
}

.contact-info p {
  font-size: 16px;
  margin-bottom: 20px;
}

.info-list {
  list-style: none;
  padding: 0;
  margin: 0 0 20px;
}

.info-list li {
  margin-bottom: 10px;
  font-size: 15px;
}

.contact-form input,
.contact-form textarea {
  width: 100%;
  margin-bottom: 15px;
  padding: 12px;
  border: 1px solid #ddd;
  border-radius: 6px;
  font-size: 15px;
}

.contact-form button {
  background-color: #002855;
  color: white;
  border: none;
  padding: 12px 24px;
  font-size: 15px;
  border-radius: 6px;
  cursor: pointer;
  transition: 0.3s ease;
}

.contact-form button:hover {
  background-color: #00509e;
}

.contact-map iframe {
  border: 0;
  width: 100%;
  height: 250px;
  border-radius: 8px;
}
</style>

