<style>
    .filters-wrapper {
      background: #f8f8f8;
      padding: 30px 20px;
      border-radius: 8px;
      margin-bottom: 20px;
      font-family: inherit;
    }
  
    .filters-wrapper h3 {
      font-size: 1.2rem;
      margin-bottom: 20px;
      color: #002147;
      border-bottom: 1px solid #ddd;
      padding-bottom: 8px;
    }
  
    .filter-group {
      margin-bottom: 25px;
    }
  
    .filter-group h4 {
      font-size: 1rem;
      color: #111;
      margin-bottom: 10px;
      font-weight: 600;
    }
  
    .filter-group ul {
      list-style: none;
      padding-left: 0;
      margin: 0;
    }
  
    .filter-group li {
      margin-bottom: 6px;
    }
  
    .filter-group a {
      color: #0055a5;
      text-decoration: none;
      font-weight: 500;
    }
  
    .filter-group a:hover {
      text-decoration: underline;
    }
  </style>
  
  <div class="filters-wrapper">
    <h3>FILTRAR POR</h3>
  
    <div class="filter-group">
      <h4>Marca</h4>
      <ul>
        {% for brand in shop.types %}
          <li><a href="#">{{ brand }}</a></li>
        {% endfor %}
      </ul>
    </div>
  
    <div class="filter-group">
      <h4>Categoría</h4>
      <ul>
        <li><a href="#">Corte</a></li>
        <li><a href="#">Costura</a></li>
        <li><a href="#">Accesorios</a></li>
      </ul>
    </div>
  
    <div class="filter-group">
      <h4>Tipo</h4>
      <ul>
        <li><a href="#">Original</a></li>
        <li><a href="#">Genérico</a></li>
        <li><a href="#">Strong H</a></li>
      </ul>
    </div>
  </div>
  