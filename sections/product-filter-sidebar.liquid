<aside class="marketplace-sidebar">
  <h3>Filtrar por</h3>
  <div class="filter-group">
    <h4>Marca</h4>
    <ul>
      {% for tag in collection.all_tags %}
        {% if tag contains 'marca_' %}
          <li><a href="{{ collection.url | append: '?filter.p.tag=' | append: tag }}">{{ tag | remove: 'marca_' }}</a></li>
        {% endif %}
      {% endfor %}
    </ul>
  </div>

  <div class="filter-group">
    <h4>Categor√≠a</h4>
    <ul>
      {% for tag in collection.all_tags %}
        {% if tag contains 'cat_' %}
          <li><a href="{{ collection.url | append: '?filter.p.tag=' | append: tag }}">{{ tag | remove: 'cat_' }}</a></li>
        {% endif %}
      {% endfor %}
    </ul>
  </div>

  <div class="filter-group">
    <h4>Tipo</h4>
    <ul>
      {% assign tipos = "original,generico,strongh" | split: "," %}
      {% for tipo in tipos %}
        <li><a href="{{ collection.url | append: '?filter.p.tag=' | append: tipo }}">{{ tipo | capitalize }}</a></li>
      {% endfor %}
    </ul>
  </div>
</aside>

<style>
.marketplace-sidebar {
  flex: 1 1 250px;
  padding: 20px;
  background-color: #f9f9f9;
  border-radius: 8px;
}

.marketplace-sidebar h3 {
  font-size: 22px;
  margin-bottom: 20px;
  text-transform: uppercase;
}

.filter-group {
  margin-bottom: 30px;
}

.filter-group h4 {
  font-size: 16px;
  margin-bottom: 10px;
}

.filter-group ul {
  list-style: none;
  padding-left: 0;
}

.filter-group li {
  margin-bottom: 8px;
}

.filter-group a {
  text-decoration: none;
  color: #0056b3;
  font-weight: 500;
}

.filter-group a:hover {
  text-decoration: underline;
}
</style>

{% schema %}
{
  "name": "Sidebar de Filtros",
  "tag": "aside",
  "settings": [],
  "presets": [
    {
      "name": "Filtros del Marketplace",
      "category": "Marketplace"
    }
  ]
}
{% endschema %}
